<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/nombreJob"
        android:hint="@string/nombre__puesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <Button
        android:id="@+id/buscarJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscarJob"
        app:layout_constraintTop_toBottomOf="@id/nombreJob"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buscarJob"
        tools:ignore="MissingConstraints">

    </android.support.v7.widget.RecyclerView>

